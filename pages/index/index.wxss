.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 20px;
}

.my-free-card{
  display: flex;
  width:90%;
  padding:1%;
  border:1px solid #ddd;
  border-radius: 10rpx;
  background:#999;
}

.my-image{
  width:750px;
  text-align: center;
}

.my-text{
  width:100%;
  position: absolute;
  bottom:1%;
}